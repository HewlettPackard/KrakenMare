{
  "type": "kafka",
  "dataSchema": {
    "dataSource": "collectd",
    "parser": {
      "type": "string",
      "parseSpec": {
        "format": "json",
        "dimensionsSpec": {
          "dimensions": [
            { "type": "string", "name": "host"},
            { "type": "float", "name": "interval"},
            { "type": "float", "name": "cpu:active"},
            { "type": "float", "name": "memory:used"},
            { "type": "float", "name": "memory:buffered"},
            { "type": "float", "name": "memory:cached"},
            { "type": "float", "name": "memory:slab_recl"},
            { "type": "float", "name": "memory:slab_unrecl"},
            { "type": "float", "name": "memory:free"}
          ]
        },
        "timestampSpec": {
          "column": "time",
          "format": "millis"
        }
      }
    },
    "granularitySpec": {
      "type": "uniform",
      "segmentGranularity": "HOUR",
      "rollup": false,
      "queryGranularity": "none"
    },
    "metricsSpec": []
  },
  "ioConfig": {
    "type": "kafka",
    "topic": "collectd-druid",
    "consumerProperties": {
      "bootstrap.servers": "broker-1:9092"
    }
  },
  "tuningConfig": {
    "type": "kafka",
    "forceExtendableShardSpecs": true,
    "maxParseExceptions": 100,
    "maxSavedParseExceptions": 10
  }
}
